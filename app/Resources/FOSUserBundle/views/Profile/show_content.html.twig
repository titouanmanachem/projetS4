{% trans_default_domain 'FOSUserBundle' %}

<style> label { color:black!important; } input { border : black 2px solid!important; color:black!important;}  p {color:black!important;} </style>

<div class="fos_user_user_show">
    <div class="container" style="margin-top: 10%;">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Votre profil {{ user.username }} </h3>
                    </div>
                    <div class="panel-body">
                        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>

                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}</p>
                           <p>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a></p>
                        {% else %}
                            <p><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></p>
                        {% endif %}
                        <br/>
                        <p></a><a href="{{path('fos_user_change_password') }}">  {{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}</a></p>
                        <p></a><a href="{{path('fos_user_profile_edit') }}">  {{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
