{% extends '::base.html.twig' %}

{% block body %}
    <!-- Header -->
    <header id="header">
        <h1>Vos parties </h1>

        {% for partie in parties if  partie.joueur1.id == app.user.id or partie.joueur2.id == app.user.id    %}

            <li><a href="{{ path('play_partie', {'id': partie.id }  ) }}">{{ partie.joueur1 }}  VS {{ partie.joueur2 }}</a></li>
           {% else %}
               <p>Vous n'avez pas de partie en cour.</p>

        {% endfor %}

        <br/><br/>
        <a href=" {{ path('addpartiespage') }}"><h2>Nouvelle partie</h2></a>
        <br/><br/>
        <a href=" {{ path('competitionpage') }}"><h2>Participer à une compétition</h2></a>
        <br/><br/>
        <a href=" {{ path('historiqueParties') }}"><h2>Historique de vos parties</h2></a>
    </header>

{% endblock %}