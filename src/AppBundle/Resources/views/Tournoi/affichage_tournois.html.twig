{% extends '::base.html.twig' %}

{% block body %}
    <!-- Header -->
    <header id="header">
        <h2>Tournoi : {{ tournois.nom }} </h2>
        <p>Nombre max de participant : {{ tournois.maxparticipant }}<br/>
        Place restante : {{ tournois.maxparticipant - nombre }}<br/>
        RÃ©compense : {{ tournois.maxparticipant * 100 }} points</p>

        {% if nombre < tournois.maxparticipant and inscrit == 0 %}
            <a style="font-size: 20px; margin-top: 2%; margin-bottom: 2%;" class="btn btn-primary" href="{{ path('inscription_tournoi', {'id': id  })  }}">Inscription au tournoi</a>
        {% endif %}

        {% if inscrit == 1 %}
            <a style="font-size: 20px; margin-top: 2%; margin-bottom: 2%;" class="btn btn-danger" href="{{ path('deinscription_tournoi', {'id': id  })  }}">Desinscription au tournoi</a>
        {% endif %}
    </header>


        {% if tournois.maxparticipant == 4  %}

                 <div class="container-fluid">
                     <div class="col-lg-3 tournoi">{{ palier1[0] }}</div>
                     <div class="col-lg-3  tournoi">{{ palier1[1] }}</div>
                     <div class="col-lg-3  tournoi">{{ palier1[2] }}</div>
                     <div class="col-lg-3  tournoi">{{ palier1[3] }}</div>
                     <div class="row"></div>
                     <div class="col-lg-3  tournoi">{{ palier2[0] }}</div>
                     <div class="col-lg-3  tournoi">{{ palier2[1] }}</div>
                     <div class="row"></div>
                     <div class="col-lg-3  tournoi">{{ palier3[0] }}</div>
                 </div>

        {% endif %}

        {% if tournois.maxparticipant == 8  %}

            <div class="container-fluid">
                <div class="col-lg-1 tournoi">{{ palier1[0] }}</div>
                <div class="col-lg-1  tournoi">{{ palier1[1] }}</div>
                <div class="col-lg-1  tournoi">{{ palier1[2] }}</div>
                <div class="col-lg-1  tournoi">{{ palier1[3] }}</div>
                <div class="col-lg-1 tournoi">{{ palier1[4] }}</div>
                <div class="col-lg-1  tournoi">{{ palier1[5] }}</div>
                <div class="col-lg-1  tournoi">{{ palier1[6] }}</div>
                <div class="col-lg-1  tournoi">{{ palier1[7] }}</div>

                <div class="row"></div>
                <div class="col-lg-1 tournoi">{{ palier2[0] }}</div>
                <div class="col-lg-1  tournoi">{{ palier2[1] }}</div>
                <div class="col-lg-1  tournoi">{{ palier2[2] }}</div>
                <div class="col-lg-1  tournoi">{{ palier2[3] }}</div>

                <div class="row"></div>
                <div class="col-lg-1 tournoi">{{ palier3[0] }}</div>
                <div class="col-lg-1  tournoi">{{ palier3[1] }}</div>

                <div class="row"></div>
                <div class="col-lg-1  tournoi">{{ palier3[0] }}</div>

            </div>

        {% endif %}


{% endblock %}