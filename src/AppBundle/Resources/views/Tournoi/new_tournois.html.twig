{% extends '::base.html.twig' %}

{% block body %}
    <!-- Header -->
    <header id="header">
        <h1>Création d'un tournoi </h1>

        <div class="container-fluid">
            <div class="col-lg-4">
                <form method="POST" action="">

                    <div class="col-lg-12">
                    <input class="form-control" required type="text" name="nom" placeholder="Nom du tournoi..." />
                    </div>


                    <div class="col-lg-12">
                    <label>Nombre de participant :</label>
                        <div class="col-lg-2">
                            <input class="form-control" min="4" max="8" step="4" type="number" name="nombre" placeholder="4" value="4" />
                        </div>
                    </div>


                    <div class="col-lg-12">
                    <input class="form-control" type="submit" name="envoyer" value="Création du tournoi" />
                    </div>

                </form>
            </div>
        </div>
    </header>

{% endblock %}